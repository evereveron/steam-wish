        <li><a href="">Another nav item</a></li>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 id="wishlist-title">Wishlist</h1>

      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"> List Items <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><a href="">100</a></li>
          <li><a href="">250</a></li>
          <li><a href="">500</a></li>
          <li><a href="">750</a></li>
          <li><a href="">1000</a></li>
          <li><a href="">All Games</a></li>
        </ul>
      </div>

      <div class="table-responsive wish-table">
        <table class="table table-striped">
          <thead>
		<tr>
            <th onclick="sort('AppId')">AppId</th>
            <th onclick="sort('GameName')">Game Name</th>
            <th onclick="sort('OriginalPrice')">Original Price</th>
            <th onclick="sort('SalePrice')">Sale Price</th>
            <th onclick="sort('Discount')">Percent Off</th>
		</tr>
		</thead>
		<!-- CONTAINS THE TABLE ROWS-->
		<% result.forEach(function(result) {%>
		<tr>
			<td><%= result.AppId %></td>
            <td><%= result.GameName %></td>
            <td><%= result.OriginalPrice %></td>
            <td><%= result.SalePrice %></td>
            <td><%= result.Discount %></td>
          </tr>
          <% }); %>

          </tbody>
        </table>
      </div>
    </div>
