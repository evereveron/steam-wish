<script>
	var defaultSort = 'ASC'; //or desc
	var current;
	var rawURL = "http:localhost:5000/index"
	function sort(order){
	if(window.location.href.indexOf('ASC') > -1 && window.location.href.indexOf(order) > -1){
		current = 'DESC';
		}else if(window.location.href.indexOf('DESC') > -1 && window.location.href.indexOf(order) > -1){
		current = 'ASC';
		}else{
		current = 'ASC';
		}
		window.location.href = window.location.href.split('/index')[0] + '/index/' + order + '_' + current;
	}
</script>
